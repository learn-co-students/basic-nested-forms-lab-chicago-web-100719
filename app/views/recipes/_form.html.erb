<h1>Create Recipe</h1>

<%= form_for @recipe do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>

<p>Ingredients:</p><br>
<%= f.fields_for :ingredients do |ing| %>
<%= ing.label %>
<%= ing.label :name %>
<%= ing.text_field :name %><br>
<%= ing.label :quantity%>
<%= ing.text_field :quantity %><br>
<% end %>
<%= f.submit "Submit Recipe" %>
<% end %>