<h1> New Recipe Form </h1>
<%= form_for(@recipe) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br>
<br>
<h2> Ingredients: </h2>
    <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %>
    <% end %>

<%= f.submit "Create Recipe" %>
<% end %>